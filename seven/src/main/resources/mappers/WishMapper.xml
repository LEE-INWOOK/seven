<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.seven.mapper.WishMapper">
	
	<select id="getWishList" resultType="com.seven.domain.WishBean">
		select * from wish from member_member_id=#{id} order by wish_date desc
	</select>
	
	<select id="" resultType="com.seven.domain.ProductBean">
		select product_num, product_title, product_image, product_category from product where product_num=#{product_num}
		<!-- product_num 은 getWishList의 select 구문을 사용하여 가져와 DAO 단에서 -->
<!-- 		select product_num, product_title, product_image, product_category from product where product_num=(select product_num from wish where member_id=#{id} ) -->
	</select>

</mapper>